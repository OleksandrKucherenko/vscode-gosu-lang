{
  "name": "@gosu-lsp/parser",
  "version": "1.0.0",
  "description": "Gosu language parser using ANTLR4",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --build",
    "clean": "rimraf dist",
    "lint": "biome check --write --unsafe --no-errors-on-unmatched src/**/*",
    "test": "vitest run",
    "package": "echo 'No package target for parser module'",
    "types:watch": "tsc --watch",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "pretest": "npm run build"
  },
  "dependencies": {
    "antlr4ng": "^3.0.4",
    "debug": "^4.3.4",
    "@gosu-lsp/shared": "*"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "rimraf": "^6.0.0"
  }
}