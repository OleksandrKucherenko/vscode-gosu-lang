{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["vscode"],
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "composite": true,
    "baseUrl": "../../",
    "paths": {
      "@gosu-lsp/shared": ["./modules/shared/src"],
      "@gosu-lsp/shared/*": ["./modules/shared/src/*"]
    }
  },
  "references": [
    {
      "path": "../shared"
    }
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"
  ]
}