{
  "name": "@gosu-lsp/shared",
  "version": "1.0.0",
  "description": "Shared types and utilities for Gosu LSP",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --build",
    "clean": "rimraf dist",
    "lint": "biome check --write --unsafe --no-errors-on-unmatched src/**/*",
    "test": "vitest run --passWithNoTests",
    "package": "echo 'No package target for shared module'",
    "types:watch": "tsc --watch",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "pretest": "npm run build"
  },
  "keywords": [
    "gosu",
    "lsp",
    "shared"
  ],
  "author": "OleksandrKucherenko",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "rimraf": "^6.0.0"
  },
  "dependencies": {
    "vscode-languageserver-types": "^3.17.5"
  }
}