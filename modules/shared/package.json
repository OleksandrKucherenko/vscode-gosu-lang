{
  "name": "@gosu-lsp/shared",
  "version": "1.0.0",
  "description": "Shared types and utilities for Gosu LSP",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "clean": "rimraf out dist coverage",
    "lint": "biome check --write --unsafe --no-errors-on-unmatched",
    "test": "vitest",
    "test:watch": "vitest --watch --coverage --ui",
    "test:coverage": "vitest --coverage",
    "package": "echo 'No package target for shared module'",
    "build": "echo 'No build target for shared module, it is a library'",
    "check:types": "tsc --noEmit --project tsconfig.json"
  },
  "keywords": [
    "gosu",
    "lsp",
    "shared"
  ],
  "author": "OleksandrKucherenko",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "rimraf": "^6.0.0"
  },
  "dependencies": {
    "vscode-languageserver-types": "^3.17.5"
  }
}