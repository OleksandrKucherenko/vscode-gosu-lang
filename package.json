{
  "name": "gosu-language-support",
  "displayName": "Gosu Programming Language",
  "description": "LSP server and language support for GOSU programming language",
  "version": "1.0.3",
  "publisher": "OleksandrKucherenko",
  "icon": "./vsix/gosu-lang.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OleksandrKucherenko/vscode-gosu-lang.git"
  },
  "categories": [
    "Programming Languages",
    "Language Packs"
  ],
  "keywords": [
    "gosu",
    "lsp",
    "language server",
    "syntax highlighting",
    "language support",
    "intellisense",
    "auto-completion"
  ],
  "main": "./out/extension.js",
  "workspaces": [
    "modules/*"
  ],
  "activationEvents": [
    "onLanguage:gosu",
    "workspaceContains:**/*.gs",
    "workspaceContains:**/*.gsx",
    "workspaceContains:**/*.gst",
    "workspaceContains:**/*.gsp"
  ],
  "contributes": {
    "languages": [
      {
        "id": "gosu",
        "aliases": [
          "GOSU",
          "gosu"
        ],
        "extensions": [
          ".gs",
          ".gsx",
          ".gst",
          ".gsp"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "gosu v2",
        "aliases": [
          "GOSU v2",
          "gosu v2"
        ],
        "extensions": [
          ".gs",
          ".gsx",
          ".gst",
          ".gsp"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "gosu",
        "scopeName": "source.gosu",
        "path": "./syntaxes/gosu.tmLanguage.simple.json"
      },
      {
        "language": "gosu v2",
        "scopeName": "source.gosu",
        "path": "./syntaxes/gosu.tmLanguage.full.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "biome check --write --unsafe --no-errors-on-unmatched",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "package": "vsce package --no-yarn",
    "check:updates": "npx npm-check-updates --interactive",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "@types/debug": "^4.1.12",
    "@types/node": "^24.1.0",
    "@types/vscode": "^1.102.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vscode/vsce": "^3.6.0",
    "antlr-ng": "^1.0.10",
    "debug": "^4.4.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "oniguruma": "^7.2.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12",
    "vscode-languageserver-types": "^3.17.5",
    "vscode-textmate": "^9.2.0"
  },
  "volta": {
    "node": "20.19.3",
    "yarn": "4.9.2"
  },
  "dependencies": {
    "antlr4ng": "^3.0.16"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --write --unsafe --no-errors-on-unmatched"
    ]
  }
}
