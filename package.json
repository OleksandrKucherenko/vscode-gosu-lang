{
  "name": "gosu-language-support",
  "displayName": "Gosu Programming Language",
  "description": "Syntax highlighting and language support for GOSU programming language",
  "version": "1.0.1",
  "publisher": "OleksandrKucherenko",
  "engines": {
    "vscode": "^1.74.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OleksandrKucherenko/vscode-gosu-lang.git"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "gosu",
    "syntax highlighting",
    "language support"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:gosu"
  ],
  "contributes": {
    "languages": [
      {
        "id": "gosu",
        "aliases": [
          "GOSU",
          "gosu"
        ],
        "extensions": [
          ".gs",
          ".gsx",
          ".gst",
          ".gsp"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "gosu",
        "scopeName": "source.gosu",
        "path": "./syntaxes/gosu.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/vscode": "^1.74.0",
    "@types/node": "^20.0.0",
    "eslint": "^8.50.0",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "typescript": "^4.9.4",
    "vitest": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vscode/vsce": "^2.15.0"
  },
  "volta": {
    "node": "20.11.1",
    "npm": "10.2.4"
  }
}
