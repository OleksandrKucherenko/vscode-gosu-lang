{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "out",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@gosu-lsp/shared": ["./modules/shared/src"],
      "@gosu-lsp/shared/*": ["./modules/shared/src/*"],
      "@gosu-lsp/parser": ["./modules/parser/src"],
      "@gosu-lsp/parser/*": ["./modules/parser/src/*"],
      "@gosu-lsp/server": ["./modules/server/src"],
      "@gosu-lsp/server/*": ["./modules/server/src/*"],
      "@gosu-lsp/client": ["./modules/client/src"],
      "@gosu-lsp/client/*": ["./modules/client/src/*"]
    }
  },
  "references": [
    {
      "path": "./modules/shared"
    },
    {
      "path": "./modules/parser"
    },
    {
      "path": "./modules/server"
    },
    {
      "path": "./modules/client"
    }
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "out",
    "modules/*/node_modules"
  ]
}