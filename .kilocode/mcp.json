{
  "mcpServers": {
    "filesystem": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "--mount",
        "type=bind,src=/home/developer/workspace/vscode-gosu-lang/,dst=/projects",
        "mcp/filesystem",
        "/projects"
      ]
    },
    "git": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "--mount",
        "type=bind,src=/home/developer/workspace/vscode-gosu-lang,dst=/workspace",
        "mcp/git"
      ]
    }
  }
}